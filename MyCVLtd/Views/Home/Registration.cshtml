@model MyCVLtd.Models.Member
@{
    ViewBag.Title = "Member Registration";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h6>Welcome to MycvLtd. Log in to interact with other users.</h6>

        </div>
        <div class="col-md-6">

            @if (ViewBag.message != null){<p class="alert alert-success" id="registration">@ViewBag.message  </p>}
            <h1>Registration</h1>
            <p>Registration is free and always will be</p>
            @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend></legend>

                @*<div class="form-group hidden">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Member_No)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Member_No)
                        @Html.ValidationMessageFor(model => model.Member_No)
                    </div>
                </div>*@
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">

                            <div class="editor-field">
                                @Html.TextBox("fName", "", new { @class = "form-control", placeholder = "Enter first Name", required = "required" })
                                @Html.ValidationMessageFor(model => model.First_Name)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">

                            <div class="editor-field">
                                @Html.TextBox("lName", "", new { @class = "form-control", placeholder = "Enter last Name", required = "required" })
                                @Html.ValidationMessageFor(model => model.Last_Name)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="editor-field">
                                @Html.TextBox("email", "", new { @class = "form-control", placeholder = "Enter Email", required = "required", type = "email" })
                                @Html.ValidationMessageFor(model => model.E_Mail)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.PasswordFor(model => model.password, new { @class = "form-control", placeholder = "Enter password", name = "password" })
                            @Html.ValidationMessageFor(model => model.password)
                        </div>

                        <div class="form-group">
                            @Html.PasswordFor(model => model.passwordCon, new { @class = "form-control", placeholder = "Confirm your password", name = "passwordCon" })
                            @Html.ValidationMessageFor(model => model.passwordCon)
                            <span id='message'></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="editor-label">
                                @Html.Label("Date of Birth")
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("DoB", "", new { @class = "form-control", placeholder = "Enter Date of Birth", type = "date", required = "required" })
                                @Html.ValidationMessageFor(model => model.Date_of_Birth)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">

                        <a href="#" id="whyDOB">Why do I need to provide my date of birth?</a>
                        <div id="reasonForDOB">
                            <p>Your date of birth helps us to show our members information that is most appropriate to them.</p>
                            <a href="#" id="okDOB" class="btn btn-primary">Alright</a>
                        </div>
                    </div>
                </div>



                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Modal Header</h4>
                            </div>
                            <div class="modal-body">
                                <p>Some text in the modal.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <label class="radio-inline">
                            <input type="radio" name="optradio" style="margin-right: 4px" />Male
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="optradio" style="margin-right: 4px" />Female
                        </label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <h6>By clicking Create an account, you agree to our <a href="@Url.Action(" Terms","Home")">Terms</a> and confirm that you have read our Data Policy, including our Cookie Use Policy.</h6>
                    </div>
                </div>

                <br>
                <p>
                    <input name="btnRegister" type="submit" class="btn btn-success" value="Register" />
                </p>
                <br>
            </fieldset>
            }

        </div>
        <div class="col-md-1">

        </div>
    </div>
</div>

<script>
    $('#password, #passwordCon').on('keyup', function () {
        if ($('#password').val() == $('#passwordCon').val()) {
            $('#message').html('Passwords Matching').css('color', 'green');
        } else
            $('#message').html('Passwords do not Match!!').css('color', 'red');
        if ($('#password').val() == '' || $('#passwordCon').val() == '') {
            $('#message').html('Password required').css('color', 'red');
        }
    });
</script>
<script>
    $('#whyDOB').click(function () {
        $('#reasonForDOB').css('display', 'block');
        $('#whyDOB').css('display', 'none');
    });
    $('#okDOB').click(function () {
        $('#reasonForDOB').css('display', 'none');
        $('#whyDOB').css('display', 'block');
    });
</script>